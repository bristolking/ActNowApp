<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:paddingTop="@dimen/standard_12"
    android:paddingBottom="@dimen/standard_12"
    android:background="@drawable/borderbottom"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left|center"
        android:layout_weight="0.7"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image_back_two"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_back"
            android:layout_margin="10dp"
            tools:ignore="VectorDrawableCompat" />
        <TextView
            android:id="@+id/btn_link_1_two"
            android:layout_width="match_parent"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_default"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Link 1"/>
        <TextView
            android:id="@+id/btn_link_2_two"
            android:layout_width="match_parent"
            android:layout_weight="0.15"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_default"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:text="Link 2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1.28"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/btn_calendarAppHeaderTwo"
            android:layout_width="@dimen/standard_24"
            android:layout_height="@dimen/standard_24"
            app:srcCompat="@drawable/ic_calendar"/>
        <ImageView
            android:id="@+id/btn_notificationsAppHeaderTwo"
            android:layout_width="@dimen/standard_24"
            android:layout_height="@dimen/standard_24"
            android:layout_marginRight="@dimen/standard_12"
            android:layout_marginLeft="@dimen/standard_12"
            app:srcCompat="@drawable/ic_notifications"/>
        <ImageView
            android:id="@+id/btn_settingsAppHeaderTwo"
            android:layout_width="@dimen/standard_24"
            android:layout_height="@dimen/standard_24"
            app:srcCompat="@drawable/ic_settings"/>
        <ImageView
            android:id="@+id/img_menuTopTwo"
            android:layout_width="@dimen/standard_24"
            android:layout_height="@dimen/standard_24"
            app:srcCompat="@drawable/ic_menu_drawble"
            android:layout_marginRight="@dimen/standard_12"
            android:layout_marginLeft="@dimen/standard_12"/>
    </LinearLayout>

</LinearLayout>

