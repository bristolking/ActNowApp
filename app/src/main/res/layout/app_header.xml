<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingTop="@dimen/standard_12"
    android:paddingBottom="@dimen/standard_12"
    android:background="@drawable/borderbottom"
    android:weightSum="2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left|center"
        android:layout_weight="1"
        android:paddingLeft="@dimen/standard_8"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/btn_link_1"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_default"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:text="Link 1"/>
        <TextView
            android:id="@+id/btn_link_2"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_default"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:text="Link 2"
            android:visibility="gone"/>
       <!-- <TextView
            android:id="@+id/btn_link_3"
            android:layout_width="0dp"
            android:layout_weight="0.10"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_default"
            android:textStyle="bold"
            android:textColor="@colorWhite/colorPrimaryDark"
            android:textAlignment="center"
            android:text="Link 3"
            android:visibility="gone"/>-->
        <TextView
            android:id="@+id/btn_link_4"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_default"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:text="Link 4"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="0.7"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/btn_calendar"
            android:layout_width="@dimen/standard_24"
            android:layout_height="@dimen/standard_24"
            app:srcCompat="@drawable/ic_bar_graph"/>
        <ImageView
            android:id="@+id/btn_notifications"
            android:layout_width="@dimen/standard_24"
            android:layout_height="@dimen/standard_24"
            android:layout_marginRight="@dimen/standard_12"
            android:layout_marginLeft="@dimen/standard_12"
            app:srcCompat="@drawable/ic_notifications"/>
        <ImageView
            android:id="@+id/btn_settings"
            android:layout_width="@dimen/standard_24"
            android:layout_height="@dimen/standard_24"
            app:srcCompat="@drawable/ic_settings"/>
        <ImageView
            android:id="@+id/img_menuTop"
            android:layout_width="@dimen/standard_24"
            android:layout_height="@dimen/standard_24"
            app:srcCompat="@drawable/ic_menu_drawble"
            android:layout_marginRight="@dimen/standard_12"
            android:layout_marginLeft="@dimen/standard_12"/>
    </LinearLayout>

</LinearLayout>
