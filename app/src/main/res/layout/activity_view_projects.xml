<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layoutProjectView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/color"
    tools:openDrawer="right"
    tools:context=".activities.projects.ViewProjectsActivity">

    <include layout="@layout/app_bar_side_menu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:orientation="vertical"
            android:padding="15dp">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/name_text_in_projectName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_newProjectName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="My Project Name Here"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorAccent" />
            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/name_text_in_newTaskTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp">

                    <EditText
                        android:id="@+id/et_newProjectOwnerName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="ProjectOwner"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:drawableLeft="@drawable/ic_usertwo"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
                </android.support.design.widget.TextInputLayout>

              <!--  <com.guna.libmultispinner.MultiSelectionSpinner
                    android:id="@+id/spinner_projectOwnerId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="20dp"/>-->
               <!-- <android.support.design.widget.TextInputLayout
                    android:id="@+id/name_text_in_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp">
                    <EditText
                        android:id="@+id/et_duedateNewProjectName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:drawableLeft="@drawable/ic_calendar"
                        android:drawablePadding="12dp"
                        android:focusable="false"
                        android:hint="Due Date"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/colorAccent" />
                </android.support.design.widget.TextInputLayout>-->
            </LinearLayout>
            <!--<android.support.design.widget.TextInputLayout
                android:id="@+id/name_text_in_descriptionProject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_descriptionPoject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Project Code"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </android.support.design.widget.TextInputLayout>-->
            <LinearLayout
                android:id="@+id/liner_IndividualProject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_individualNewProjectName"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/ic_plus" />

                <TextView
                    android:id="@+id/tv_indivdualProjectText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/image_individualNewProjectName"
                    android:paddingLeft="8dp"
                    android:text="Individual"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/textColor" />
            </LinearLayout>
          <LinearLayout
                android:id="@+id/liner_newPojectColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_newProjectcolor"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/ic_plus" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/image_individualNewProjectName"
                    android:paddingLeft="8dp"
                    android:text="Color"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/textColor" />
            </LinearLayout>
          <!--  <android.support.design.widget.TextInputLayout
                android:id="@+id/name_text_in_commentNewProject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_commentNewProject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Write a Comment....."
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </android.support.design.widget.TextInputLayout>-->
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/footer"/>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_side_menu"
        app:menu="@menu/activity_side_menu_drawer" />
</android.support.v4.widget.DrawerLayout>