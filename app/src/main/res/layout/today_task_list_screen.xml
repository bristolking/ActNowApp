<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/cardview_default_elevation"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/dash_board_background"
            android:padding="8dp">
            <TextView
                android:id="@+id/today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OverDue"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorPrimary" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <com.actnow.android.adapter.expandleRecyclerView.ExpandableLinearLayout
        android:id="@+id/expandableView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:expandDuration="200">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/panel_square">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioGroup
                    android:id="@+id/todaytaskradioGroupTask"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5">
                    <RadioButton
                        android:id="@+id/todayradio_buttonAction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/textColor"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/textColor" />
                </RadioGroup>
                <TextView
                    android:id="@+id/tv_todaytaskListName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:text="Task1"
                    android:layout_gravity="center"
                    android:textColor="@color/black" />
                <TextView
                    android:id="@+id/tv_todaytaskListDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="25/01/2019"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/tv_todaytaskRaminder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingRight="15dp"
                    android:layout_weight="0"
                    android:text="0"
                    android:textColor="@color/colorAccent" />
                <TextView
                    android:id="@+id/tv_todaytaskCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingRight="10dp"
                    android:layout_weight="0"
                    android:text="0"
                    android:visibility="gone"
                    android:textColor="@color/colorAccent" />
                <TextView
                    android:id="@+id/tv_todaytaskstatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingRight="10dp"
                    android:layout_weight="0"
                    android:text="0"
                    android:visibility="gone"
                    android:textColor="@color/colorAccent" />
                <TextView
                    android:id="@+id/tv_todaytaskRepeatType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingRight="10dp"
                    android:layout_weight="0"
                    android:text="0"
                    android:visibility="gone"
                    android:textColor="@color/colorAccent" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Project :"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/tv_todayprojectNameTaskList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="55dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="Cancri"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tv_todayprojectCodeTaskList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="60dp"
                    android:layout_centerVertical="true"
                    android:layout_centerInParent="true"
                    android:text="ffffff"
                    android:visibility="gone"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="p"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:paddingRight="20dp"/>

                <TextView
                    android:id="@+id/tv_todaytaskListPriority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_centerVertical="true"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"/>
                <ImageView
                    android:id="@+id/img_todaycommentTaskList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="75dp"
                    app:srcCompat="@drawable/ic_chat" />
                <ImageView
                    android:id="@+id/img_raminderTaskList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="35dp"
                    app:srcCompat="@drawable/ic_alarm_clock" />
                <ImageView
                    android:id="@+id/img_todayuseraddTaskList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_useradd" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/linebackground" />
        </LinearLayout>

    </com.actnow.android.adapter.expandleRecyclerView.ExpandableLinearLayout>
</LinearLayout>
