<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:id="@+id/taskList_liner"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioGroup
            android:id="@+id/taskWeekGroupTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5">
            <RadioButton
                android:id="@+id/Week_buttonAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/textColor"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/textColor" />
        </RadioGroup>
        <TextView
            android:id="@+id/tv_WeektaskListName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:text="Task1"
            android:layout_gravity="center"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/tv_weektaskListDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="25/01/2019"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/tv_WeektaskRaminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingRight="15dp"
            android:layout_weight="0"
            android:text="0"
            android:textColor="@color/colorAccent" />
        <TextView
            android:id="@+id/tv_WeektaskCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingRight="10dp"
            android:layout_weight="0"
            android:text="0"
            android:visibility="gone"
            android:textColor="@color/colorAccent" />
        <TextView
            android:id="@+id/tv_Weektaskstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingRight="10dp"
            android:layout_weight="0"
            android:text="0"
            android:visibility="gone"
            android:textColor="@color/colorAccent" />
        <TextView
            android:id="@+id/tv_WeektaskRepeatType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingRight="10dp"
            android:layout_weight="0"
            android:text="0"
            android:visibility="gone"
            android:textColor="@color/colorAccent" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Project :"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentLeft="true"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/tv_WeekprojectNameTaskList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="60dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="Cancri"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_WeekprojectCodeTaskList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="60dp"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:text="ffffff"
            android:visibility="gone"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="p"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:paddingRight="20dp"/>

        <TextView
            android:id="@+id/tv_WeektaskListPriority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"/>
        <ImageView
            android:id="@+id/img_WeekcommentTaskList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="90dp"
            app:srcCompat="@drawable/ic_chat" />
        <ImageView
            android:id="@+id/img_WeekraminderTaskList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="60dp"
            app:srcCompat="@drawable/ic_alarm_clock" />
        <ImageView
            android:id="@+id/img_WeekuseraddTaskList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            app:srcCompat="@drawable/ic_useradd" />
        <ImageView
            android:id="@+id/img_WeekuseraddDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_trash_can" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/linebackground" />
</LinearLayout>

