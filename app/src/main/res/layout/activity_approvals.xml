<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_approval"
    android:fitsSystemWindows="true"
    tools:openDrawer="right"
    android:background="@color/color"
    tools:context=".activities.ApprovalsActivity">
    <RelativeLayout
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content_layout"
            android:layout_marginTop="40dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="8dp">
                <ImageView
                    android:id="@+id/image_approvalbuldProject"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    app:srcCompat="@drawable/ic_lightbulb"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1.5"
                    android:layout_margin="4dp"/>
                <EditText
                    android:id="@+id/edit_searchApproval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_square"
                    android:drawableRight="@drawable/ic_search"
                    android:hint="Quick Find"
                    android:layout_weight="1.5"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:layout_centerHorizontal="true"/>
                <Button
                    android:id="@+id/button_searchApproval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_square"
                    android:backgroundTint="@color/colorYellow"
                    android:text="Advanced Search"
                    android:layout_weight="1.5"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:textColor="@color/colorWhite"
                    android:layout_alignParentRight="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Approvals"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorPrimary" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/approval_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>
      <!--  <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="65dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/ic_add_circular"
            tools:ignore="VectorDrawableCompat" />-->

        <include layout="@layout/app_header_two" />
        <include layout="@layout/app_footer" />
    </RelativeLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_side_menu"
        app:menu="@menu/activity_side_menu_drawer" />
</android.support.v4.widget.DrawerLayout>