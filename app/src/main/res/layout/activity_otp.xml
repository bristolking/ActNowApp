<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"

    tools:context=".activities.OTPActivity">
    <RelativeLayout
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/standard_24"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_logo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/standard_128"
                    android:layout_margin="@dimen/standard_32"
                    android:src="@drawable/img_actnow"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/standard_12"
                    android:textSize="@dimen/text_size_larger"
                    android:text="OTP "/>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/name_text_in_otpmobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/standard_12">
                    <EditText
                        android:id="@+id/et_otpMobileNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter your mobile"
                        android:maxLines="1"
                        android:maxLength="8"
                        android:inputType="phone"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_default" />
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/bt_otpSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/btn_h_32"
                    android:layout_marginTop="@dimen/standard_12"
                    android:background="@drawable/btn_primary"
                    android:text="Submit"
                    android:textAllCaps="true"
                    android:textSize="@dimen/text_size_default" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>