<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_projectTaskInsights"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tasks"
            android:textColor="@color/colorAccent" />
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barchart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="10dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:text="ProjectName :"
                android:textColor="@color/colorAccent" />
            <TextView
                android:id="@+id/tv_projects_InsgihtsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ProjectName"
                android:paddingLeft="5dp"
                android:textColor="@color/bule" />
        </LinearLayout>
        <TextView
            android:id="@+id/project_insgihts_duedate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:text="duedate"
            android:visibility="gone"
            android:textColor="@color/colorAccent" />
        <TextView
            android:id="@+id/tv_projects_InsgihtsCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="projectcode"
            android:paddingLeft="5dp"
            android:visibility="gone"
            android:textColor="@color/bule" />
        <TextView
            android:id="@+id/tv_projects_InsgihtsColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="color"
            android:paddingLeft="5dp"
            android:visibility="gone"
            android:textColor="@color/bule" />

        <TextView
            android:id="@+id/tv_projectInsightsCompleteTasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_projectInsightsPendingTasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_projectInsightsOngoingTasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_projectInsightsApprovalTasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>

