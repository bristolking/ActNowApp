<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layoutTaskView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/color"
    tools:openDrawer="right"
    tools:context=".activities.tasks.ViewTasksActivity">

    <include layout="@layout/app_bar_side_menu" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:padding="15dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/name_text_in_taskName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_newTaskProjectName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="My Task Name Here"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorAccent" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/name_text_in_newTaskTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp">

                    <EditText
                        android:id="@+id/et_newtaskTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="TaskOwner"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:drawableLeft="@drawable/ic_usertwo"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/name_text_in_taskdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp">

                    <EditText
                        android:id="@+id/et_duedateNewTaskName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:drawableLeft="@drawable/ic_calendar_"
                        android:drawablePadding="12dp"
                        android:focusable="false"
                        android:hint="Due Date"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/colorAccent" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/re_projrectNewTask"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/image_project"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        app:srcCompat="@drawable/ic_plus" />

                    <TextView
                        android:id="@+id/tv_projectTask"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/image_project"
                        android:text="Project"
                        android:paddingLeft="8dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/textColor" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/re_projectNewIndividual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/image_individual"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        app:srcCompat="@drawable/ic_plus" />

                    <TextView
                        android:id="@+id/tv_individualCheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/image_individual"
                        android:paddingLeft="8dp"
                        android:text="Individual"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/textColor" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/re_priorityNewTask"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/image_priority"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        app:srcCompat="@drawable/ic_plus" />
                    <TextView
                        android:id="@+id/tv_taskPriorty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/image_priority"
                        android:paddingLeft="8dp"
                        android:text="Priority"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/textColor" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/re_reminderNewTask"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/image_reminder"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        app:srcCompat="@drawable/ic_clock" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/image_reminder"
                        android:paddingLeft="8dp"
                        android:text="Remainder"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/textColor" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp">
                <Spinner
                    android:id="@+id/spinnerReapt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Repat Option"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:fontFamily="@font/montserrat"
                    app:met_floatingLabel="normal" />
                <Spinner
                    android:id="@+id/spinner_weekley"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="BATTERY TYPE"
                    android:visibility="gone"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:fontFamily="@font/montserrat"
                    app:met_floatingLabel="normal" />
                <Spinner
                    android:id="@+id/spinner_monthly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="BATTERY TYPE"
                    android:visibility="gone"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:fontFamily="@font/montserrat"
                    app:met_floatingLabel="normal" />
                 <Spinner
                    android:id="@+id/spinner_yearly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="BATTERY TYPE"
                    android:visibility="gone"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:fontFamily="@font/montserrat"
                    app:met_floatingLabel="normal" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:layout_marginBottom="50dp">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/name_text_in_commentNewTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_commentNewTask"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Write a Comment....."
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>
    </RelativeLayout>
    <include layout="@layout/footer" />
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_side_menu"
        app:menu="@menu/activity_side_menu_drawer" />
</android.support.v4.widget.DrawerLayout>