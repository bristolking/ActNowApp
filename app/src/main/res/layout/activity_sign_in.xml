<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color"
    tools:context=".activities.SignInActivity">
    <RelativeLayout
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/standard_24"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_logo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/standard_128"
                    android:layout_margin="@dimen/standard_32"
                    android:src="@drawable/img_actnow"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/standard_12"
                    android:textSize="@dimen/text_size_larger"
                    android:text="Log In"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/name_text_in_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/standard_12">
                    <EditText
                        android:id="@+id/et_loginEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="EMAIL/MOBILE"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_default" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/name_text_in_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true"
                    android:layout_marginBottom="@dimen/standard_12">
                    <EditText
                        android:id="@+id/et_loginPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="PASSWORD"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_default" />
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <CheckBox
                        android:id="@+id/chk_disclaimer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:text="Terms of Service &amp; Privacy Policy"
                        android:textSize="@dimen/text_size_small" />
                    <TextView
                        android:id="@+id/forgot_password"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="center|end"
                        android:text="Forgot Password"
                        android:textAlignment="viewEnd"
                        android:textSize="@dimen/text_size_small"/>
                </LinearLayout>
                <Button
                    android:id="@+id/bt_login"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/btn_h_32"
                    android:layout_marginTop="@dimen/standard_12"
                    android:background="@drawable/btn_primary"
                    android:text="Login"
                    android:textAllCaps="true"
                    android:textSize="@dimen/text_size_default" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/standard_12">
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="0.33"
                        android:layout_height="1dp"
                        android:background="@color/colorAccent"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.33"
                        android:text="or connect with"
                        android:textAlignment="center"
                        android:layout_marginLeft="@dimen/standard_8"
                        android:layout_marginRight="@dimen/standard_8"
                        android:textColor="@color/colorAccent"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="0.33"
                        android:layout_height="1dp"
                        android:background="@color/colorAccent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/standard_12">
                    <Button
                        android:id="@+id/bt_facebook"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="@dimen/btn_h_32"
                        android:background="@drawable/btn_primary"
                        android:text="Facebook"
                        android:backgroundTint="#3b579d"
                        android:layout_marginRight="@dimen/standard_8"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_default" />
                    <Button
                        android:id="@+id/bt_google"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="@dimen/btn_h_32"
                        android:background="@drawable/btn_primary"
                        android:layout_marginLeft="@dimen/standard_8"
                        android:text="Google"
                        android:textAllCaps="true"
                        android:textSize="@dimen/text_size_default" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/standard_12">
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="0.25"
                        android:layout_height="match_parent"/>
                    <Button
                        android:id="@+id/bt_signup"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="@dimen/btn_h_32"
                        android:background="@drawable/btn_warning"
                        android:text="Sign Up"
                        android:textAllCaps="true"
                        android:textSize="@dimen/text_size_default" />
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="0.25"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>