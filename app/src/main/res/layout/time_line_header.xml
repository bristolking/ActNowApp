<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@drawable/borderbottom">

    <ImageView
        android:id="@+id/image_backTimeLine"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        app:srcCompat="@drawable/ic_back"
        tools:ignore="VectorDrawableCompat" />


    <TextView
        android:id="@+id/txt_titlesTimeLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TITLE"
        android:textAllCaps="true"
        android:paddingLeft="55dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorAccent" />
    <TextView
        android:id="@+id/txt_timeLineMainDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/txt_timeLineProjectCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/txt_timelineuserId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/txt_timelineActoinType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/img_calenderTimeLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="90dp"
        app:srcCompat="@drawable/ic_calendar_red" />

    <ImageView
        android:id="@+id/img_filterProject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        app:srcCompat="@drawable/ic_list_project" />

    <ImageView
        android:id="@+id/img_byEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="10dp"
        app:srcCompat="@drawable/ic_menu_round" />

</RelativeLayout>
