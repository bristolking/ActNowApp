<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color"
    tools:context=".activities.SignUpActivity">
    <RelativeLayout
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/standard_24"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_logo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/standard_128"
                    android:layout_margin="@dimen/standard_32"
                    android:src="@drawable/img_actnow"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/standard_12"
                    android:textSize="@dimen/text_size_larger"
                    android:text="Sign Up"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/standard_12">
                    <EditText
                        android:id="@+id/et_signUpname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="NAME"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_default" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/standard_12">
                    <EditText
                        android:id="@+id/et_signUpEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="EMAIL"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_default" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/name_text_in_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/standard_12">
                    <EditText
                        android:id="@+id/et_signUpmobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="MOBILE"
                        android:maxLines="1"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_default" />
                </android.support.design.widget.TextInputLayout>
               <!-- <android.support.design.widget.TextInputLayout
                    android:id="@+id/name_text_in_organizationName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/et_organizationName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="ORGANIZATION NAME"
                        android:textAllCaps="true"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_default" />
                </android.support.design.widget.TextInputLayout>-->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/name_text_in_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true"
                    android:layout_marginBottom="@dimen/standard_12">
                    <EditText
                        android:id="@+id/et_sinUpPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="PASSWORD"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_default" />
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/bt_signUp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/btn_h_32"
                    android:layout_marginTop="@dimen/standard_12"
                    android:background="@drawable/btn_primary"
                    android:text="Sign Up"
                    android:textAllCaps="true"
                    android:textSize="@dimen/text_size_default" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>